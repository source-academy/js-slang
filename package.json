{
  "name": "js-slang",
  "version": "0.1.2",
  "description": "Javascript-based interpreter for slang, written in Typescript",
  "author": {
    "name": "Source Academy",
    "url": "https://github.com/source-academy/"
  },
  "dependencies": {
    "@types/acorn": "^4.0.3",
    "@types/estree": "0.0.39",
    "acorn": "^5.7.1",
    "astring": "^1.2.0",
    "commander": "^2.14.1",
    "common-tags": "^1.4.0",
    "invariant": "^2.2.2"
  },
  "main": "dist/index",
  "types": "dist/index",
  "files": [
    "dist"
  ],
  "scripts": {
    "prepublishOnly": "tsc",
    "build": "tsc",
    "test": "jest",
    "test-coveralls": "jest --coverage --coverageReporters=text-lcov | coveralls"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/source-academy/js-slang.git"
  },
  "bugs": {
    "url": "https://github.com/source-academy/js-slang/issues"
  },
  "homepage": "https://github.com/source-academy/js-slang",
  "devDependencies": {
    "@types/common-tags": "^1.4.0",
    "@types/invariant": "^2.2.29",
    "@types/jest": "^23.1.4",
    "@types/node": "^9.4.7",
    "coveralls": "^3.0.1",
    "jest": "^23.3.0",
    "ts-jest": "^23.0.0",
    "typescript": "^2.7.2"
  },
  "jest": {
    "moduleFileExtensions": [
      "ts",
      "js"
    ],
    "transform": {
      "\\.ts$": "<rootDir>/node_modules/ts-jest/preprocessor.js"
    },
    "testRegex": "/__tests__/.*\\.ts$",
    "testPathIgnorePatterns": [
        "/dist/"
    ],
    "coveragePathIgnorePatterns": [
        "/node_modules/",
        "/src/typings/",
        "/dist/"
    ]
  }
}
