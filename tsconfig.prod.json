{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "rootDir": "src",
    "outDir": "./dist",
    "noEmit": false,
    "skipLibCheck": true
  },
  // Excludes are overwritten when using extends, so we
  // list all the excludes again
  "exclude": [
    "src/stdlib/metacircular-interpreter",
    "src/stdlib/**/*.js",
    "node_modules",
    "dist",
    "sicp_publish",
    "src/py-slang/src/tests",
    "src/**/__tests__/**",
    "src/**/__mocks__/**",
    "src/utils/testing",
    "vitest.config.ts"
  ]
}
